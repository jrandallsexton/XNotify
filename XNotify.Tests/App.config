<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="XNotify"
             type="XNotify.Config.XNotifyConfigSection, XNotify" />
  </configSections>
  <XNotify name="My Notification Service"
           description="Super duper remote monitoring and notification provider"
           version="0.0.0.1">
    <EventProviders>
      <EventProvider name="FakeEventProvider00"
                     class="FakeEventProvider"
                     monitorInterval="6000"
                     enabled="true"/>
      <EventProvider name="FakeEventProvider01"
                     class="MyOtherFakeEventProvider"
                     monitorInterval="12000"
                     enabled="false"/>
    </EventProviders>
    <NotificationProviders>
      <NotificationProvider name="FakeEventProvider00"
                            class="FakeEventProvider"
                            type="email"
                            enabled="true"
                            username="myAccount"
                            password="myPassword"
                            sid="myAccountToken"/>
      <NotificationProvider name="FakeEventProvider01"
                            class="FakeEventProvider"
                            type="SMS"
                            enabled="true"
                            username="myAccount"
                            password="myPassword"
                            sid="myAccountToken"/>
    </NotificationProviders>
  </XNotify>
</configuration>